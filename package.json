{
  "name": "windsurf-account-switcher",
  "version": "1.0.0",
  "description": "Windsurf-Tool 账号管理工具 - 批量注册、自动切换、账号池管理",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac-arm64": "electron-builder --mac --arm64",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "windsurf",
    "account",
    "switcher"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "imap": "^0.8.19",
    "mailparser": "^3.6.5",
    "puppeteer": "^21.11.0",
    "puppeteer-real-browser": "^1.3.8",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.windsurf.account.switcher",
    "productName": "Windsurf-Tool 1.0",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "src/**/*",
      "bin/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Windsurf-Tool 1.0",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
